<% content_for :title, "Characters" %>

<h1>Characters</h1>

<div id="characters">
  <% @characters.each do |character| %>
    <%= render character %>
    <button>
      <%= link_to "Show this character", character %>
    </button>
  <% end %>
</div>

<button>
<%= link_to "Back to users", users_path %> |
</button>

<button>
<%= link_to "New character", new_character_path %>
